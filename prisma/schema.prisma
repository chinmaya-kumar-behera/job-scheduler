generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id             String   @id @default(uuid())
  name           String
  type           String 
  payload        Json
  schedule       String   // cron format
  status         String   @default("active")
  lastRunAt      DateTime?
  nextRunAt      DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
